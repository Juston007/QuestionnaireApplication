<Window x:Class="在线答题系统管理系统.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登入" Height="280" Width="450" Loaded="Window_Loaded_1">
    <Grid>
        <Label Content="账号" HorizontalAlignment="Left" Margin="82,63,0,0" VerticalAlignment="Top"/>
        <Label Content="密码" HorizontalAlignment="Left" Margin="82,107,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUid" HorizontalAlignment="Left" Height="23" Margin="154,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <PasswordBox x:Name="txtPwd" HorizontalAlignment="Left" Margin="154,112,0,0" VerticalAlignment="Top" Width="168"/>
        <CheckBox x:Name="cbRememberMe" Content="记住密码" HorizontalAlignment="Left" Margin="82,175,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="登入" HorizontalAlignment="Left" Margin="178,162,0,0" VerticalAlignment="Top" Width="144" Height="29" Click="btnLogin_Click"/>

    </Grid>
</Window>
